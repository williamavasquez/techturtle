<table id="inventory" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>User Id</th>
            <th>Barcode</th>
            <th>Quantity</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
            <tr>
                <td data-search="{{this.orderNumber}}">{{this.orderNumber}}</td>
                <td data-search="{{this.userId}}">{{this.userId}}</td>
                <td data-search="{{this.barcode}}">{{this.barcode}}</td>
                <td>{{this.quantityPurchased}}</td>
                <td width="70" align="center">
                  <span>
                    <a href="#" data-toggle="modal" data-target="#deleteOrders-{{this.barcode}}"><img src="/assets/images/delete_btn.png" alt="delete"></a>
                  </span>
                </td>
            </tr>
            <!-- Modal Delete -->
            <div id="deleteOrders-{{this.barcode}}" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Are you sure you want to delete {{this.productName}}</h4>
                  </div>
                  <div class="modal-body">
                    <form action="orders/delete/{{this.barcode}}?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-danger btn-lg btn-block">DELETE!</button>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
        {{/each}} 
    </tbody>
</table>