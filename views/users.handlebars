<div class="row inventory">
  <div class="col-md-12">
    <button data-toggle="modal" data-target="#addNew" class="btn btn-success btn-sm newUserBtn">Enter New User</button>
  </div>
  <div class="col-md-12">&nbsp;</div>
</div>
<table id="inventory" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
            <tr>
                <td data-search="{{this.userId}}">{{this.userId}}</td>
                <td data-search="{{this.userName}}">{{this.userName}}</td>
                <td data-search="{{this.name}}">{{this.name}}</td>
                <td data-search="{{this.emailAddress}}">{{this.emailAddress}}</td>
                <td data-search="{{this.role}}">{{this.role}}</td>
                <td width="70" align="center">
                  <span>
                  <a href="#" data-toggle="modal" data-target="#users-{{this.userId}}"><img src="/assets/images/edit_btn.png" alt="edit"></a> <a href="#" data-toggle="modal" data-target="#delete-{{this.userId}}"><img src="/assets/images/delete_btn.png" alt="delete"></a>
                  </span>
                </td>
            </tr>
            <!-- Modal -->
            <div id="users-{{this.userId}}" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Update {{this.productName}}</h4>
                  </div>
                  <div class="modal-body">
                    <form action="users/update/{{this.userId}}?_method=PUT" method="POST" class="form col-md-12 center-block">
                        <div class="form-group">
                          User Id <input type="text" class="form-control input-md" name="userId" value="{{this.userId}}">
                        </div>
                        <div class="form-group">
                          User Name <input type="text" class="form-control input-md" name="userName" value="{{this.username}}">
                        </div>
                        <div class="form-group">
                          Name <input type="text" class="form-control input-md" name="name" value="{{this.name}}">
                        </div>
                        <div class="form-group">
                          Email Address <input type="text" class="form-control input-md" name="emailAddress" value="{{this.emailAddress}}">
                        </div>
                        <div class="form-group">
                          Role <input type="text" class="form-control input-md" name="role" value="{{this.role}}">
                        </div>
                        <div class="form-group">
                          <button class="btn btn-primary btn-lg btn-block">Update</button>
                        </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <!-- Modal Delete -->
            <div id="delete-{{this.userId}}" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Are you sure you want to delete {{this.productName}}</h4>
                  </div>
                  <div class="modal-body">
                    <form action="users/delete/{{this.userId}}?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-danger btn-lg btn-block">DELETE!</button>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
        {{/each}}
    </tbody>
</table>

<!-- Modal Add New -->
<div id="addNew" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Enter New User</h4>
      </div>
      <div class="modal-body">
        <form action="users/createNewUser" method="POST" class="form center-block">
            <div class="form-group">
              User Id <input type="text" class="form-control input-md" name="userId">
            </div>
            <div class="form-group">
              User Name <input type="text" class="form-control input-md" name="username">
            </div>
            <div class="form-group">
              Name <input type="text" class="form-control input-md" name="name">
            </div>
            <div class="form-group">
              Email Address <input type="text" class="form-control input-md" name="emailAddress">
            </div>
            <div class="form-group">
              Password <input type="password" class="form-control input-lg" placeholder="Password" name="password">
            </div>
            <div class="form-group">
              Role <input type="text" class="form-control input-md" name="role">
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-md">Add New</button>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
